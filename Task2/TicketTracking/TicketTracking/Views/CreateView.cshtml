@{
    ViewBag.Title = "Create Page";
    Layout = null;
}
@model TicketTracking.Models.Bug_Create;

<!-- BootStrap引用 -->
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="Stylesheet" type="text/css" />
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

<div class="container">
    <div class="col-md-7 col-lg-8 mt-3">
        <h4 class="mb-3">Create Bug</h4>
        <form method="post" class="needs-validation" action="/Create/CreateBug">
            <div class="row g-3">
            <div class="col-sm-6">
                <label for="firstName" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="@Model.name" required>
            </div>

            <div class="col-sm-6">
                <label for="lastName" class="form-label">Statement</label>
                <input type="text" class="form-control" id="statement" name="statement" value="@Model.statement" required>
            </div>

            </div>

            <hr class="my-4">

            <button class="w-100 btn btn-primary btn-lg" type="submit">Create</button>
        </form>
    </div>
</div>